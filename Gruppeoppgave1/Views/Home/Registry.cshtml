
@{
    ViewBag.Title = "Registry";
}

<form class="form-horizontal" action='' method="POST">
    <fieldset>
        <div id="legend">
            <legend class=""><h2>Register</h2></legend>
        </div>

        <div class="control-group">
            <!-- Fornavn-->
            <label class="control-label" for="fornavn">Fornavn</label>
            <div class="controls">
                <input type="text" id="fornavn" name="fornavn" placeholder="" class="input-xlarge">
                <p class="help-block">Fornavn should be at least 4 characters</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Etternavn -->
            <label class="control-label" for="etternavn">Etternavn</label>
            <div class="controls">
                <input type="text" id="etternavn" name="etternavn" placeholder="" class="input-xlarge">
                <p class="help-block">Etternavn should be at least 4 characters</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Adresse -->
            <label class="control-label" for="adresse">Adresse</label>
            <div class="controls">
                <input type="text" id="adresse" name="adresse" placeholder="" class="input-xlarge">
                <p class="help-block">Please provide your Adresse</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Telefon -->
            <label class="control-label" for="telefon">Telefon</label>
            <div class="controls">
                <input type="text" id="telefon" name="telefon" placeholder="" class="input-xlarge">
                <p class="help-block">Please provide your Telephone number</p>
            </div>
        </div>

        <div class="control-group">
            <!-- E-mail -->
            <label class="control-label" for="email">E-mail</label>
            <div class="controls">
                <input type="text" id="email" name="email" placeholder="" class="input-xlarge">
                <p class="help-block">Please provide your E-mail</p>
            </div>
        </div>

        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password</label>
            <div class="controls">
                <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
                <p class="help-block">Password should be at least 4 characters</p>
            </div>
        </div>


        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success">Register</button>
            </div>
        </div>
    </fieldset>
</form>