
@{
    ViewBag.Title = "Registry";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<form class="form-horizontal">
    <fieldset>
        <div id="legend">
            <h2>Register</h2>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="control-label">Fornavn</label>
                <input type="text" name="Fornavn" class="form-control" placeholder="Fornavn" required>
                <p class="help-block">Fornavn should be at least 4 characters</p>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <label class="control-label">Etternavn</label>
                <input type="text" name="Etternavn" class="form-control" placeholder="Etternavn" required>
                <p class="help-block">Etternavn should be at least 4 characters</p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">Adresse</label>
            <input type="text" name="Adresse" class="form-control" placeholder="Adresse" required>
            <p class="help-block">Adresse should be at least 4 characters</p>
        </div>

        <div class="control-group">
            <label class="control-label">Telefon</label>
            <input type="text" name="Telefon" class="form-control" placeholder="Telefon" required>
            <p class="help-block">Telefon should be at least 4 characters</p>
        </div>

        <div class="control-group">
            <label class="control-label">Fødselsdato</label>
            <input type="text" name="Fødselsdato" class="form-control" placeholder="Fødselsdato" required>
            <p class="help-block">Fødselsdato should be at least 4 characters</p>
        </div>

        <div class="control-group">
            <label class="control-label">Epost</label>
            <input type="email" name="Epost" class="form-control" placeholder="Email address" required autofocus>
            <p class="help-block">Epost should be at least 4 characters</p>
        </div>

        <div class="control-group">
            <label class="control-label">Passord</label>
            <input type="password" name="Passord" class="form-control" placeholder="Password" required>
            <p class="help-block">Passord should be at least 4 characters</p>
        </div>

        <div class="control-group">
        <button class="btn btn-lg btn-primary btn-signin" type="submit" >Regisrate</button>
        </div>
    </fieldset>
</form><!-- /form -->

}